{
  "compilerOptions": {
    "module": "CommonJS",
    "esModuleInterop":false,
    "noEmitOnError": true,
    "isolatedModules": true,
    "outDir":"./main",
    "declaration": true,
    "declarationDir": "./types",
    "emitDeclarationOnly": true,
    "allowJs": true,
    "target":"es6",
    "baseUrl": ".",
    "paths":{
      "proto":["src/proto"],
      "source":["source"]
    }
  },
  "include": [
    "src/proto/**/*",
    "src/clients/*",
    "src/helpers/*",
    "src/contracts/**/*",
    "src/config/*",
  ],
}