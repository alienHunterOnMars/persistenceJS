{
  "compilerOptions": {
    "moduleResolution": "node",
      "outDir":"./main",
      "isolatedModules": true,
      "declaration": true,
      "declarationDir": "./types",
      "emitDeclarationOnly": true,
      "allowJs": true,
      "lib": [
          "es2015",
          "es2016",
          "es2017",
      ],
      "baseUrl": ".",
      "paths":{
        "proto":["src/proto"],
        "source":["source"]
      }
  },
  "include": [
      "src/proto/**/*",
      "src/clients/*",
      "src/helpers/*",
      "src/contracts/**/*",
      "src/config/*",
  ],
}